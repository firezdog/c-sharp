@model WeddingApp.Models.WeddingViewModel
@{
    ViewData["Title"] = "New";
}
<div class="container">
    <h1>Add New Wedding</h1>
    <form asp-action="NewWedding" asp-controller="Wedding">
        <div class="form-group">
            <label asp-for="WedderOne"></label>
            <input asp-for="WedderOne" class="form-control"/>
            <small class="text-danger"><span asp-validation-for="WedderOne"></span></small>
        </div>
        <div class="form-group">
            <label asp-for="WedderTwo"></label>
            <input asp-for="WedderTwo" class="form-control"/>
            <small class="text-danger"><span asp-validation-for="WedderTwo"></span></small>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="date" class="form-control"/>
            <small class="text-danger"><span asp-validation-for="Date"></span></small>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control"/>
            <small class="text-danger"><span asp-validation-for="Address"></span></small>
        </div>
        <button class="btn btn-primary">Create</button>
    </form>
</div>