@{ViewData["Title"]="New Restaurant";}

@model RESTauranter.Models.Review

<div class="container">
    <h1>Review a Restaurant</h1>
    <form asp-action="NewReview" method="POST">
        <div class="form-group">
            <label asp-for="reviewer"></label>
            <input class="form-control" asp-for="reviewer">
            <small class="text-danger"><span asp-validation-for="reviewer"></span></small>
        </div>
        <div class="row">
            <div class="col-11">
                <div class="form-group">
                    <label asp-for="restaurant"></label>
                    <input class="form-control" asp-for="restaurant">
                    <small class="text-danger"><span asp-validation-for="restaurant"></span></small>
                </div>
            </div>
            <div class="col-1">
                <div class="form-group">
                    <label asp-for="rating"></label>
                    <select class="form-control" asp-for="rating">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <small class="text-danger"><span asp-validation-for="rating"></span></small>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="date_visited"></label>
            <input type="date" class="form-control" asp-for="date_visited">
            <small class="text-danger"><span asp-validation-for="date_visited"></span></small>
        </div>
        <div class="form-group">
            <label asp-for="review"></label>
            <textarea class="form-control" asp-for="review" rows="5"></textarea>
            <small class="text-danger"><span asp-validation-for="review"></span></small>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>