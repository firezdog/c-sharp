@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <h1>Bank Login Page</h1>
    <p>New user? <a asp-action="Register">Register</a>...</p>
    <form asp-action="CheckUser" asp-method="POST">
        @if (ViewBag.fail){
        <small class="text-danger">Username or password is invalid.</small>
        }
        <div class="form-group">
            <label>Email Address</label>
            <input class="form-control" name="user" type="text"/>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" name="password" type="password"/>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>