@{
    ViewData["Title"] = "New Trail";
}
@model LostInWoods.Models.TrailViewModel
<div class="container">
    <h1 class="text-center">Create A New Trail<a asp-controller="LostInWoods" asp-action="Index"><button class="btn btn-danger float-right">Back</button></a></h1>
    <form method="POST" asp-action="CreateTrail" asp-controller="LostInWoods">
        <div class="form-group">
            <label asp-for="trail_name"></label>
            <input placeholder="Happy Trails" class="form-control" asp-for="trail_name">
            <span class="error" asp-validation-for="trail_name"></span>
        </div>
        <div class="form-group">
            <label asp-for="trail_description"></label>
            <textarea placeholder="Enter you trail description." class="form-control" asp-for="trail_description"></textarea>
            <span class="error" asp-validation-for="trail_description"></span>
        </div>
        <div class="form-group">
            <label asp-for="trail_length"></label>
            <input placeholder="3.7" class="form-control" type="number" step="0.01" asp-for="trail_length">
            <span class="error" asp-validation-for="trail_length"></span>
        </div>
        <div class="form-group">
            <label asp-for="elevation_change"></label>
            <input placeholder="2000" class="form-control" type="number" asp-for="elevation_change">
            <span class="error" asp-validation-for="elevation_change"></span>
        </div>
        <div class="form-group">
            <label asp-for="latitude"></label>
            <input placeholder="33.3" class="form-control" type="number" step="0.01" asp-for="latitude">
            <span class="error" asp-validation-for="latitude"></span>
        </div>
        <div class="form-group">
            <label asp-for="longitude"></label>
            <input placeholder="90.7" class="form-control" type="number" step="0.01" asp-for="longitude">
            <span class="error" asp-validation-for="longitude"></span>
        </div>
        <button class="float-right btn btn-primary" type="submit">Submit</button>
    </form>
</div>